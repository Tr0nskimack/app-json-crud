<div class='container mt-4'>
  <div class='row'>
    {{#each books}}
      <div class='col-md-4'>
        <div class='card'>
          <div class='card-header bg-dark text-white'>
            <h4>{{author}}</h4>
          </div>
          <img class='card-img-top' src='{{image}}' alt='Imagen' />
          <div class='card-body'>
            <small class='mb3'>{{name}}</small>
            <p>{{description}}</p>
          </div>
          <a href='/delete/{{id}}' class='btn btn-danger'>Eliminar</a>
        </div>
      </div>
    {{/each}}

  </div>
</div>